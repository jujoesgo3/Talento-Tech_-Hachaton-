import React, { useState, useEffect } from 'react';
import {
    LayoutDashboard,
    Users,
    AlertTriangle,
    TrendingUp,
    Lightbulb,
    Menu,
    X,
    Phone,
    Globe,
    DollarSign,
    Activity,
    ArrowUpRight,
    ArrowDownRight,
    MoreHorizontal,
    Search,
    Bell,
    Loader,
    RefreshCw
} from 'lucide-react';
import AIChatAssistant from './AIChatAssistant';
import NewLeadModal from './NewLeadModal';
import { dashboardService, leadsService } from '../services/api';
import {
    BarChart,
    Bar,
    XAxis,
    YAxis,
    CartesianGrid,
    Tooltip,
    Legend,
    ResponsiveContainer,
    LineChart,
    Line,
    PieChart,
    Pie,
    Cell,
    AreaChart,
    Area
} from 'recharts';

// --- MOCK DATA ---

const MOCK_LEADS = [
    { id: 1, name: "Ana García", date: "2023-10-25", source: "WhatsApp", budget: "$5,000", status: "Caliente", score: 92, avatar: "AG" },
    { id: 2, name: "Carlos López", date: "2023-10-24", source: "Web", budget: "$2,500", status: "Tibio", score: 65, avatar: "CL" },
    { id: 3, name: "Empresa XYZ", date: "2023-10-24", source: "Web", budget: "$12,000", status: "Caliente", score: 88, avatar: "EX" },
    { id: 4, name: "Juan Pérez", date: "2023-10-23", source: "WhatsApp", budget: "$1,000", status: "Frío", score: 30, avatar: "JP" },
    { id: 5, name: "María Rodríguez", date: "2023-10-23", source: "Web", budget: "$3,200", status: "Tibio", score: 55, avatar: "MR" },
    { id: 6, name: "Tech Solutions", date: "2023-10-22", source: "Web", budget: "$8,500", status: "Caliente", score: 95, avatar: "TS" },
];

const MOCK_CHURN_RISK = [
    { id: 1, name: "Distribuidora Norte", probability: 85, impact: "$15,000/mes", recommendation: "Ofrecer descuento del 10% en próxima compra", trend: "up" },
    { id: 2, name: "Consultora Global", probability: 65, impact: "$4,200/mes", recommendation: "Agendar reunión de seguimiento con Gerente", trend: "stable" },
    { id: 3, name: "StartUp Innova", probability: 45, impact: "$1,500/mes", recommendation: "Enviar caso de éxito relevante", trend: "down" },
];

const MOCK_METRICS = {
    totalLeads: 145,
    conversionRate: "12.5%",
    roi: "320%",
    campaigns: [
        { name: 'Facebook', roi: 240 },
        { name: 'Google Ads', roi: 380 },
        { name: 'Email', roi: 180 },
        { name: 'LinkedIn', roi: 290 },
    ],
    history: [
        { day: '1', leads: 4 }, { day: '5', leads: 7 }, { day: '10', leads: 5 },
        { day: '15', leads: 12 }, { day: '20', leads: 8 }, { day: '25', leads: 15 }, { day: '30', leads: 18 },
    ],
    sources: [
        { name: 'WhatsApp', value: 45 },
        { name: 'Web', value: 35 },
        { name: 'Referidos', value: 20 },
    ],
};

const MOCK_INSIGHTS = [
    { id: 1, type: "opportunity", text: "Patrón detectado: Los leads de Instagram tienen un 20% más de probabilidad de cierre los fines de semana.", time: "Hace 2h" },
    { id: 2, type: "warning", text: "Alerta: El tiempo de respuesta en WhatsApp aumentó a 45min. Esto reduce la conversión en un 15%.", time: "Hace 5h" },
    { id: 3, type: "info", text: "Tendencia: El interés en el producto 'Premium' ha crecido un 30% en la última semana.", time: "Ayer" },
];

const COLORS = ['#6366f1', '#8b5cf6', '#ec4899', '#10b981'];

// --- COMPONENTS ---

const StatusBadge = ({ status }) => {
    const styles = {
        "Caliente": "bg-rose-100 text-rose-700 border-rose-200",
        "Tibio": "bg-amber-100 text-amber-700 border-amber-200",
        "Frío": "bg-slate-100 text-slate-700 border-slate-200",
    };
    return (
        <span className={`px-3 py-1 rounded-full text-xs font-bold border ${styles[status] || "bg-gray-100 text-gray-800"}`}>
            {status}
        </span>
    );
};

const Dashboard = () => {
    const [activeTab, setActiveTab] = useState('leads');
    const [isMobileMenuOpen, setIsMobileMenuOpen] = useState(false);
    const [isNewLeadModalOpen, setIsNewLeadModalOpen] = useState(false);

    // Estados para datos del backend
    const [leads, setLeads] = useState([]);
    const [churnAlerts, setChurnAlerts] = useState([]);
    const [metrics, setMetrics] = useState(null);

    // Estados de UI
    const [isLoading, setIsLoading] = useState(true);
    const [error, setError] = useState(null);

    // Cargar datos al montar el componente
    useEffect(() => {
        loadDashboardData();
    }, []);

    const loadDashboardData = async () => {
        setIsLoading(true);
        setError(null);

        try {
            const data = await dashboardService.loadAll();
            setLeads(data.leads);
            setChurnAlerts(data.churnAlerts);
            setMetrics(data.metrics);
        } catch (err) {
            console.error('Error al cargar datos:', err);
            setError('No se pudieron cargar los datos. Asegúrate de que el backend esté ejecutándose en http://localhost:8000');
        } finally {
            setIsLoading(false);
        }
    };

    const handleLeadCreated = (newLead) => {
        setLeads((prevLeads) => [newLead, ...prevLeads]);
    };

    // Función helper para obtener avatar
    const getAvatar = (name) => {
        if (!name) return 'N/A';
        const words = name.split(' ');
        if (words.length >= 2) {
            return (words[0][0] + words[1][0]).toUpperCase();
        }
        return name.substring(0, 2).toUpperCase();
    };

    // Función helper para formatear fuente
    const getSourceIcon = (source) => {
        const lowerSource = source?.toLowerCase() || '';
        if (lowerSource.includes('whatsapp')) {
            return <div className="p-1.5 bg-green-100 text-green-600 rounded-lg"><Phone size={14} /></div>;
        }
        return <div className="p-1.5 bg-blue-100 text-blue-600 rounded-lg"><Globe size={14} /></div>;
    };

    // Renderizar loading
    if (isLoading) {
        return (
            <div className="min-h-screen bg-slate-50 flex items-center justify-center">
                <div className="text-center">
                    <Loader className="w-12 h-12 text-indigo-600 animate-spin mx-auto mb-4" />
                    <p className="text-slate-600 font-medium">Cargando datos del dashboard...</p>
                </div>
            </div>
        );
    }

    // Renderizar error
    if (error) {
        return (
            <div className="min-h-screen bg-slate-50 flex items-center justify-center p-6">
                <div className="bg-white rounded-2xl shadow-xl p-8 max-w-md text-center">
                    <div className="w-16 h-16 bg-rose-100 text-rose-600 rounded-full flex items-center justify-center mx-auto mb-4">
                        <AlertTriangle size={32} />
                    </div>
                    <h2 className="text-2xl font-bold text-slate-900 mb-2">Error de Conexión</h2>
                    <p className="text-slate-600 mb-6">{error}</p>
                    <button
                        onClick={loadDashboardData}
                        className="bg-indigo-600 hover:bg-indigo-700 text-white px-6 py-3 rounded-xl font-medium shadow-lg shadow-indigo-200 transition-all flex items-center gap-2 mx-auto"
                    >
                        <RefreshCw size={18} />
                        Reintentar
                    </button>
                </div>
            </div>
        );
    }


    const renderContent = () => {
        switch (activeTab) {
            case 'leads':
                return (
                    <div className="space-y-8 animate-fade-in">
                        <div className="flex justify-between items-center">
                            <div>
                                <h2 className="text-3xl font-bold text-slate-900 tracking-tight">Leads en Tiempo Real</h2>
                                <p className="text-slate-500 mt-1">Gestiona y prioriza tus oportunidades de venta.</p>
                            </div>
                            <button
                                onClick={() => setIsNewLeadModalOpen(true)}
                                className="bg-indigo-600 hover:bg-indigo-700 text-white px-5 py-2.5 rounded-xl font-medium shadow-lg shadow-indigo-200 transition-all transform hover:-translate-y-0.5"
                            >
                                + Nuevo Lead
                            </button>
                        </div>

                        <div className="bg-white rounded-2xl shadow-xl shadow-slate-200/60 overflow-hidden border border-slate-100">
                            <div className="overflow-x-auto">
                                <table className="w-full text-left">
                                    <thead className="bg-slate-50/50 text-slate-500 uppercase text-xs font-bold tracking-wider border-b border-slate-100">
                                        <tr>
                                            <th className="px-8 py-5">Nombre</th>
                                            <th className="px-6 py-5">Industria</th>
                                            <th className="px-6 py-5">Fuente</th>
                                            <th className="px-6 py-5">Presupuesto</th>
                                            <th className="px-6 py-5">Urgencia</th>
                                            <th className="px-6 py-5">Clasificación IA</th>
                                            <th className="px-6 py-5">Score</th>
                                        </tr>
                                    </thead>
                                    <tbody className="divide-y divide-slate-50">
                                        {leads.length === 0 ? (
                                            <tr>
                                                <td colSpan="7" className="px-8 py-12 text-center text-slate-500">
                                                    No hay leads disponibles. Crea uno nuevo para comenzar.
                                                </td>
                                            </tr>
                                        ) : (
                                            leads.map((lead) => (
                                                <tr key={lead.id} className="hover:bg-indigo-50/30 transition-colors group">
                                                    <td className="px-8 py-5">
                                                        <div className="flex items-center gap-4">
                                                            <div className="w-10 h-10 rounded-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center text-white font-bold text-sm shadow-md">
                                                                {getAvatar(lead.nombre)}
                                                            </div>
                                                            <span className="font-semibold text-slate-900">{lead.nombre}</span>
                                                        </div>
                                                    </td>
                                                    <td className="px-6 py-5 text-slate-700 text-sm">{lead.industria || 'N/A'}</td>
                                                    <td className="px-6 py-5">
                                                        <div className="flex items-center gap-2">
                                                            {getSourceIcon(lead.fuente)}
                                                            <span className="text-slate-700 font-medium text-sm">{lead.fuente}</span>
                                                        </div>
                                                    </td>
                                                    <td className="px-6 py-5 text-slate-900 font-semibold">
                                                        ${lead.presupuesto ? lead.presupuesto.toLocaleString() : '0'}
                                                    </td>
                                                    <td className="px-6 py-5">
                                                        <span className={`px-2 py-1 rounded-md text-xs font-semibold ${lead.urgencia === 'Alta' ? 'bg-rose-100 text-rose-700' :
                                                            lead.urgencia === 'Media' ? 'bg-amber-100 text-amber-700' :
                                                                'bg-slate-100 text-slate-700'
                                                            }`}>
                                                            {lead.urgencia}
                                                        </span>
                                                    </td>
                                                    <td className="px-6 py-5"><StatusBadge status={lead.clasificacion} /></td>
                                                    <td className="px-6 py-5">
                                                        <div className="flex items-center gap-3">
                                                            <div className="w-24 bg-slate-100 rounded-full h-2.5 overflow-hidden">
                                                                <div
                                                                    className={`h-full rounded-full transition-all duration-1000 ease-out ${lead.score_calidad > 80 ? 'bg-gradient-to-r from-green-400 to-green-500' :
                                                                        lead.score_calidad > 50 ? 'bg-gradient-to-r from-amber-400 to-amber-500' :
                                                                            'bg-gradient-to-r from-rose-400 to-rose-500'
                                                                        }`}
                                                                    style={{ width: `${lead.score_calidad}%` }}
                                                                ></div>
                                                            </div>
                                                            <span className="text-sm font-bold text-slate-700">{lead.score_calidad}</span>
                                                        </div>
                                                    </td>
                                                </tr>
                                            ))
                                        )}
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                );
            case 'churn':
                return (
                    <div className="space-y-8 animate-fade-in">
                        <div>
                            <h2 className="text-3xl font-bold text-slate-900 tracking-tight">Alertas de Churn</h2>
                            <p className="text-slate-500 mt-1">Clientes en riesgo que requieren atención inmediata.</p>
                        </div>

                        <div className="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                            {churnAlerts.length === 0 ? (
                                <div className="col-span-full text-center py-12 bg-white rounded-2xl shadow-xl border border-slate-100">
                                    <p className="text-slate-500">No hay clientes en riesgo alto de churn en este momento.</p>
                                </div>
                            ) : (
                                churnAlerts.map((client) => (
                                    <div key={client.cliente_id} className="bg-white rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100 p-8 hover:shadow-2xl hover:shadow-slate-300/50 transition-all duration-300 transform hover:-translate-y-1 group relative overflow-hidden">
                                        <div className={`absolute top-0 left-0 w-1 h-full ${client.riesgo_churn > 0.85 ? 'bg-rose-600' :
                                            client.riesgo_churn > 0.7 ? 'bg-rose-500' :
                                                'bg-amber-500'
                                            }`}></div>

                                        <div className="flex justify-between items-start mb-6">
                                            <div>
                                                <h3 className="font-bold text-xl text-slate-900">{client.nombre}</h3>
                                                <p className="text-sm text-slate-500 mt-1">
                                                    Impacto: <span className="font-semibold text-slate-700">
                                                        ${client.impacto_estimado.toLocaleString('en-US', { minimumFractionDigits: 2, maximumFractionDigits: 2 })}
                                                    </span>
                                                </p>
                                            </div>
                                            <div className={`p-3 rounded-xl ${client.riesgo_churn > 0.85 ? 'bg-rose-100 text-rose-600' :
                                                client.riesgo_churn > 0.7 ? 'bg-rose-50 text-rose-600' :
                                                    'bg-amber-50 text-amber-600'
                                                }`}>
                                                <AlertTriangle size={24} />
                                            </div>
                                        </div>

                                        <div className="mb-6">
                                            <div className="flex justify-between text-sm mb-2">
                                                <span className="text-slate-600 font-medium">Probabilidad de Fuga</span>
                                                <span className={`font-bold ${client.riesgo_churn > 0.85 ? 'text-rose-700' :
                                                    client.riesgo_churn > 0.7 ? 'text-rose-600' :
                                                        'text-amber-600'
                                                    }`}>
                                                    {(client.riesgo_churn * 100).toFixed(0)}%
                                                </span>
                                            </div>
                                            <div className="w-full bg-slate-100 rounded-full h-3 overflow-hidden">
                                                <div
                                                    className={`h-full rounded-full transition-all duration-1000 ${client.riesgo_churn > 0.85 ? 'bg-rose-600' :
                                                        client.riesgo_churn > 0.7 ? 'bg-rose-500' :
                                                            'bg-amber-500'
                                                        }`}
                                                    style={{ width: `${client.riesgo_churn * 100}%` }}
                                                ></div>
                                            </div>
                                        </div>

                                        <div className="bg-indigo-50/50 p-4 rounded-xl border border-indigo-100/50">
                                            <div className="flex items-center gap-2 mb-2">
                                                <Lightbulb size={16} className="text-indigo-600" />
                                                <p className="text-xs font-bold text-indigo-800 uppercase tracking-wide">Recomendación IA</p>
                                            </div>
                                            <p className="text-sm text-indigo-900/80 leading-relaxed">{client.recomendacion}</p>
                                        </div>

                                        <div className="mt-6 pt-4 border-t border-slate-50 flex justify-between items-center">
                                            <button className="text-sm font-semibold text-indigo-600 hover:text-indigo-700">Ver Análisis Completo</button>
                                            <button className="px-4 py-2 bg-slate-900 text-white text-sm font-medium rounded-lg hover:bg-slate-800 transition-colors">Actuar</button>
                                        </div>
                                    </div>
                                ))
                            )}
                        </div>
                    </div>
                );
            case 'metrics':
                // Transformar datos para los gráficos
                const conversionChartData = metrics?.conversion_por_fuente
                    ? Object.entries(metrics.conversion_por_fuente).map(([name, value]) => ({
                        name,
                        conversion: value
                    }))
                    : [];

                const leadsHistoryData = metrics?.leads_por_dia
                    ? Object.entries(metrics.leads_por_dia).map(([fecha, cantidad]) => ({
                        day: new Date(fecha).getDate().toString(),
                        leads: cantidad
                    }))
                    : [];

                const sourcesPieData = metrics?.conversion_por_fuente
                    ? Object.entries(metrics.conversion_por_fuente).map(([name, value]) => ({
                        name,
                        value: Math.round(value)
                    }))
                    : [];

                return (
                    <div className="space-y-8 animate-fade-in">
                        <div>
                            <h2 className="text-3xl font-bold text-slate-900 tracking-tight">Métricas de Negocio</h2>
                            <p className="text-slate-500 mt-1">Visión general del rendimiento de tus campañas.</p>
                        </div>

                        {/* KPI Cards */}
                        <div className="grid grid-cols-1 md:grid-cols-3 gap-8">
                            <div className="bg-white p-8 rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100 relative overflow-hidden group">
                                <div className="absolute right-0 top-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
                                    <Users size={100} />
                                </div>
                                <div className="flex items-center gap-4 mb-4">
                                    <div className="p-3 bg-indigo-50 text-indigo-600 rounded-xl">
                                        <Users size={24} />
                                    </div>
                                </div>
                                <p className="text-slate-500 font-medium">Total Leads</p>
                                <p className="text-4xl font-bold text-slate-900 mt-2">{metrics?.total_leads || 0}</p>
                            </div>

                            <div className="bg-white p-8 rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100 relative overflow-hidden group">
                                <div className="absolute right-0 top-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
                                    <Activity size={100} />
                                </div>
                                <div className="flex items-center gap-4 mb-4">
                                    <div className="p-3 bg-emerald-50 text-emerald-600 rounded-xl">
                                        <Activity size={24} />
                                    </div>
                                </div>
                                <p className="text-slate-500 font-medium">Conversión Promedio</p>
                                <p className="text-4xl font-bold text-slate-900 mt-2">
                                    {metrics?.tasa_conversion_promedio ? `${metrics.tasa_conversion_promedio.toFixed(1)}%` : '0%'}
                                </p>
                            </div>

                            <div className="bg-white p-8 rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100 relative overflow-hidden group">
                                <div className="absolute right-0 top-0 p-8 opacity-5 group-hover:opacity-10 transition-opacity">
                                    <DollarSign size={100} />
                                </div>
                                <div className="flex items-center gap-4 mb-4">
                                    <div className="p-3 bg-violet-50 text-violet-600 rounded-xl">
                                        <DollarSign size={24} />
                                    </div>
                                </div>
                                <p className="text-slate-500 font-medium">ROI Estimado</p>
                                <p className="text-4xl font-bold text-slate-900 mt-2">
                                    ${metrics?.roi_total ? metrics.roi_total.toLocaleString() : '0'}
                                </p>
                            </div>
                        </div>

                        {/* Charts */}
                        <div className="grid grid-cols-1 lg:grid-cols-2 gap-8">
                            <div className="bg-white p-8 rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100">
                                <h3 className="font-bold text-xl text-slate-900 mb-6">Conversión por Fuente</h3>
                                <div className="h-80">
                                    {conversionChartData.length > 0 ? (
                                        <ResponsiveContainer width="100%" height="100%">
                                            <BarChart data={conversionChartData}>
                                                <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#f1f5f9" />
                                                <XAxis dataKey="name" axisLine={false} tickLine={false} tick={{ fill: '#64748b' }} dy={10} />
                                                <YAxis axisLine={false} tickLine={false} tick={{ fill: '#64748b' }} />
                                                <Tooltip
                                                    cursor={{ fill: '#f8fafc' }}
                                                    contentStyle={{ borderRadius: '12px', border: 'none', boxShadow: '0 10px 15px -3px rgb(0 0 0 / 0.1)' }}
                                                />
                                                <Bar dataKey="conversion" fill="#6366f1" radius={[8, 8, 0, 0]} barSize={50} />
                                            </BarChart>
                                        </ResponsiveContainer>
                                    ) : (
                                        <div className="h-full flex items-center justify-center text-slate-400">
                                            No hay datos disponibles
                                        </div>
                                    )}
                                </div>
                            </div>

                            <div className="bg-white p-8 rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100">
                                <h3 className="font-bold text-xl text-slate-900 mb-6">Histórico de Leads (7 días)</h3>
                                <div className="h-80">
                                    {leadsHistoryData.length > 0 ? (
                                        <ResponsiveContainer width="100%" height="100%">
                                            <AreaChart data={leadsHistoryData}>
                                                <defs>
                                                    <linearGradient id="colorLeads" x1="0" y1="0" x2="0" y2="1">
                                                        <stop offset="5%" stopColor="#10b981" stopOpacity={0.2} />
                                                        <stop offset="95%" stopColor="#10b981" stopOpacity={0} />
                                                    </linearGradient>
                                                </defs>
                                                <CartesianGrid strokeDasharray="3 3" vertical={false} stroke="#f1f5f9" />
                                                <XAxis dataKey="day" axisLine={false} tickLine={false} tick={{ fill: '#64748b' }} dy={10} />
                                                <YAxis axisLine={false} tickLine={false} tick={{ fill: '#64748b' }} />
                                                <Tooltip
                                                    contentStyle={{ borderRadius: '12px', border: 'none', boxShadow: '0 10px 15px -3px rgb(0 0 0 / 0.1)' }}
                                                />
                                                <Area type="monotone" dataKey="leads" stroke="#10b981" strokeWidth={3} fillOpacity={1} fill="url(#colorLeads)" />
                                            </AreaChart>
                                        </ResponsiveContainer>
                                    ) : (
                                        <div className="h-full flex items-center justify-center text-slate-400">
                                            No hay datos disponibles
                                        </div>
                                    )}
                                </div>
                            </div>

                            <div className="bg-white p-8 rounded-2xl shadow-xl shadow-slate-200/60 border border-slate-100 lg:col-span-2">
                            </div>
                        </div>
                        );
                    </div >
                ))
        }
                                    </div >
                                </div >

    <div className="h-80 w-full flex justify-center">
        <ResponsiveContainer width="100%" height="100%" maxWidth={600}>
            <PieChart>
                <Pie
                    data={MOCK_METRICS.sources}
                    cx="50%"
                    cy="50%"
                    innerRadius={80}
                    outerRadius={110}
                    fill="#8884d8"
                    paddingAngle={5}
                    dataKey="value"
                    stroke="none"
                >
                    {MOCK_METRICS.sources.map((entry, index) => (
                        <Cell key={`cell-${index}`} fill={COLORS[index % COLORS.length]} cornerRadius={6} />
                    ))}
                </Pie>
                <Tooltip
                    contentStyle={{ borderRadius: '12px', border: 'none', boxShadow: '0 10px 15px -3px rgb(0 0 0 / 0.1)' }}
                />
            </PieChart>
        </ResponsiveContainer>
    </div>
                            </div >
                        </div >
                    </div >
                );
            case 'insights':
return (
    <div className="space-y-8 animate-fade-in">
        <div>
            <h2 className="text-3xl font-bold text-slate-900 tracking-tight">Insights Automáticos</h2>
            <p className="text-slate-500 mt-1">Descubrimientos generados por nuestra IA para mejorar tu negocio.</p>
        </div>

